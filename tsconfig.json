{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@marcohefti/request-network-api-client": [
        "./src/index.ts"
      ],
      "@marcohefti/request-network-api-client/*": [
        "./src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "tests",
    "vitest.config.mts",
    "tsup.config.ts",
    "eslint.config.*",
    "examples",
    "scripts"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules"
  ]
}
